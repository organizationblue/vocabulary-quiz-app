{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",

    "rootDir": "src",
    "outDir": "dist",

    "types": ["node"],

    "sourceMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    "skipLibCheck": true
  }
}
